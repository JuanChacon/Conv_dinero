<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.tecii.android.conv_dinero.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/IngNum"
        android:id="@+id/tvT"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtC"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvT"
         />
    <Button
        android:text="@string/BtnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignBaseline="@+id/txtC"
        android:layout_alignBottom="@+id/txtC"
        android:layout_toRightOf="@+id/tvT"
        android:layout_toEndOf="@+id/tvT" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tv100"
        android:ems="15"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/txtC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tv50"
        android:ems="15"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Tv100"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tv20"
        android:ems="15"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/Tv50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tvm5"
        android:ems="15"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/Tv20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tvm2"
        android:ems="15"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Tvm5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tvm1"
        android:ems="15"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Tvm2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tvm50"
        android:ems="15"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/Tvm1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tvm20"
        android:ems="15"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/Tvm50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tvm10"
        android:ems="15"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Tvm20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
